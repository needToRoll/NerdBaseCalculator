<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/AppTheme.myActionBar</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.myActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/AppTheme.myTitle</item>
    </style>

    <style name="AppTheme.myTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">25dp</item>
    </style>
</resources>
